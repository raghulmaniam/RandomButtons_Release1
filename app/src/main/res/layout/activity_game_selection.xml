<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameSelection"
    android:layout_margin="10dp"
    android:background="@drawable/margin">

    <FrameLayout

        android:id="@+id/dummyButtonLayout2"
        android:layout_width="221dp"
        android:layout_height="363dp"
        android:layout_centerInParent="true"
        android:layout_gravity="bottom"
        android:layout_marginStart="32dp"
        android:layout_marginTop="30dp"
        android:alpha="0.4"
        android:visibility="visible">

        <Button
            android:id="@+id/dummy_button1"
            android:layout_width="130dp"
            android:layout_height="40dp"

            android:layout_marginTop="90dp"
            android:alpha="1"
            android:background="@drawable/rules_green"

            android:text="Today is the day"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_gravity="top"
            >

        </Button>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
       android:layout_centerVertical="true"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="182dp"
            android:layout_height="29dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="casual"
            android:textColor="@color/colorPrimary"
            android:text="Game List--"
            />




        <Button
            android:id="@+id/button_game1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Random Buttons"
            android:background="@drawable/rules_green"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textAllCaps="false"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            >
        </Button>

        <Button
            android:id="@+id/button_game2"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Memory Buttons"
            android:background="@drawable/rules_green"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"

            >
        </Button>

    </RelativeLayout>



</RelativeLayout>